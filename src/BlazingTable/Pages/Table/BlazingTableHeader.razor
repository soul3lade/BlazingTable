@typeparam T
@using BlazingTable.Models

<div class="blazingtable-header">
    <div class="row">
        <div class="col-4 blazingtable-header-title">
            @Title
        </div>
        <div class="col-7">

        </div>
        <div class="col-1">
            <span class="oi oi-wrench blazingtable-header-filter" aria-hidden="true" onclick="@CallParentToggleFilterMenu"></span>
            @if (ShowFilter)
            {
                <BlazingTableFilter FilterData="@FilterData" ColumnSettings="@ColumnSettings"></BlazingTableFilter>
            }
        </div>
    </div>
</div>


@code {

    [Parameter] public string Title { get; set; }

    [Parameter] public T FilterData { get; set; }

    [Parameter] public List<BlazingTableColumn> ColumnSettings { get; set; }

    [Parameter] public bool ShowFilter { get; set; }

    [Parameter] public EventCallback CallParentToggleFilterMenu { get; set; }

}
